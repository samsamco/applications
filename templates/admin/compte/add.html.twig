
{% extends 'admin/base.html.twig' %}

{% block title %} Ajouter compte {% endblock %}

{% block body %}


    <div class="row">
        <div class="col-12">



            {% for message in app.flashes('message') %}
                <div class="w-50 mx-auto">

                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button class="close" type="button" data-dismiss="alert" aria-label="Close"><span class="mdi mdi-close" aria-hidden="true"></span></button>
                        <div class="icon"><span class="mdi mdi-check"></span></div>
                        <div class="message">{{  message }}</div>
                    </div>

                </div>
            {% endfor %}



            <div class="card card-border-color card-border-color-primary">
                <div class="card-body">
                    {{ form_start(form) }}

                    {%  if not form_errors(form) is empty  %}
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button class="close" type="button" data-dismiss="alert" aria-label="Close"><span class="mdi mdi-close" aria-hidden="true"></span></button>
                            <div class="icon"> <span class="mdi mdi-close-circle-o"></span></div>
                            <div class="message">{{ form_errors(form) }}</div>
                        </div>
                    {% endif %}

                    <div class="form-group pt-2">
                        {{ form_label(form.nom, 'Nom') }}
                        {{ form_widget(form.nom,{ 'attr': {'class': 'form-control','placeholder':'Nom'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.prenom, 'Prenom') }}
                        {{ form_widget(form.prenom,{ 'attr': {'class': 'form-control','placeholder':'Prénom'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.email, 'Email') }}
                        {{ form_widget(form.email,{ 'attr': {'class': 'form-control','placeholder':'Email'} }) }}
                    </div>


                    <div class="form-group">
                        {{ form_label(form.password, 'Mot de passe') }}
                        <div class="input-group mb-3">
                            {{ form_widget(form.password,{ 'attr': {'class': 'form-control password1','placeholder':'Mot de passe'} }) }}
                            <div class="input-group-append">
                                <button class="btn btn-primary showpass" type="button">Afficher</button>
                            </div>
                        </div>
                    </div>




                    <div class="form-group row">
                        {{ form_label(form.identifiant, 'Charger l\'identifiant', {'label_attr': {'class': 'col-12 col-sm-3 col-form-label text-sm-right'}}) }}
                        <div class="col-12 col-sm-6">
                            {{ form_widget(form.identifiant,{ 'attr': {'multiple':'multiple'} }) }}
                        </div>
                    </div>



                    <div class="form-group row">
                        {{ form_label(form.avatar, 'Charger un avatar', {'label_attr': {'class': 'col-12 col-sm-3 col-form-label text-sm-right'}}) }}
                        <div class="col-12 col-sm-6">
                            {{ form_widget(form.avatar,{ 'attr': {'multiple':'multiple'} }) }}
                        </div>
                    </div>


                    <div class="form-group">
                        {{ form_label(form.tel, 'Téléphone') }}
                        {{ form_widget(form.tel,{ 'attr': {'class': 'form-control','placeholder':'Téléphone'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.adresse, 'Adresse') }}
                        {{ form_widget(form.adresse,{ 'attr': {'class': 'form-control','placeholder':'Adresse'} }) }}
                    </div>


                    <div class="row pt-3">
                        <div class="col-lg-6 pb-4 pb-lg-0">

                        </div>
                        <div class="col-sm-6">
                            <p class="text-right">
                                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-space btn-primary'} , 'label': 'Valider' } ) }}
                            </p>
                        </div>
                    </div>

                    {{ form_end(form) }}

                </div>

            </div>

        </div>
    </div>


{% endblock %}


